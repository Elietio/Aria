<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Windows Blue -->
    <!-- Note: SystemAccentColors are handled by ApplicationAccentColorManager in code -->

    <Color x:Key="AmbientGlowColor">#00BFFF</Color>
    <SolidColorBrush x:Key="AmbientGlowBrush" Color="{StaticResource AmbientGlowColor}" />

</ResourceDictionary>
